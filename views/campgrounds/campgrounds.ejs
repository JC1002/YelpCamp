<%- include('../partials/header') %>
<div class="container">
<header class="jumbotron">
  <div>
    <h1>This is the campgrounds page!</h1>
    <p>View our han-picked campgrounds from many places around the world</p>
    <p>
      <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
    </p>
  </div>
</header>

<div class="row">
  <div class="col-lg-12">
    <h3>Our Most Popular</h3>
  </div>
</div>

  <div class="row text-center sibling-fade" style="display: flex; flex-wrap: wrap;">
    <% campgrounds.forEach((campground) =>{ %>
      <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <img src="<%= campground.image %>">
            <div class="caption">
              <h4><%= campground.name %></h4>
            </div>
            <div class="caption">
              <p><%= campground.description.substring(0,100) %>...</p>
            </div>
          </div>
          <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">See more</a>
      </div>
    <% }); %>
  </div>
</div>
<%- include('../partials/footer') %>